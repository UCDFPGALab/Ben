#include <iostream>




int main()
{
  toBinary(170);
  return 0;
}

string toBinary(unsigned int val)
{ 
  string holder = "";
  // According to Arduino documentation, ints are 32  bits on the Due
  unsigned int mask = 1 << 31;
  
  for(int i = 0; i < 32; i++)
  {
     if( (val & mask) == '0')
     {
       holder += "0";
     }
     else
     {
       holder += "1"; 
     }
     // Bitshift the mask over one character
     mask >>= 1;
  }
  Serial.print("THE BINARY REPRESENTATION OF ");
  Serial.print(val);
  Serial.print("IS ");
  Serial.print(holder);
  Serial.print("\n"); 
  return holder;   
}
